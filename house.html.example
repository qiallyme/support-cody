  <script>
    document.getElementById('y').textContent = new Date().getFullYear();
    const b = document.getElementById('navbtn'), m = document.getElementById('navm');
    b?.addEventListener('click', ()=> m.classList.toggle('hidden'));

    async function fetchJSON(url){
      const r = await fetch(url + '?v=' + Date.now()); // cache-bust
      if(!r.ok) throw new Error('Failed to load ' + url);
      return r.json();
    }

    // Render gallery
    (async () => {
      try {
        const items = await fetchJSON('./gallery.json');
        const gallery = document.getElementById('gallery');
        gallery.innerHTML = '';
        items.forEach(img => {
          const el = document.createElement('a');
          el.href = img.src; el.target = '_blank'; el.rel = 'noopener';
          el.className = 'block group';
          el.innerHTML = `
            <img src="${img.src}" alt="${img.alt||''}" loading="lazy"
                 class="w-full aspect-[4/3] object-cover rounded-lg shadow-sm group-hover:opacity-95">
            <div class="mt-1 text-xs text-gray-500">${img.alt||''}</div>`;
          gallery.appendChild(el);
        });
      } catch(e) {
        console.error(e);
        document.getElementById('gallery').innerHTML =
          '<p class="text-sm text-red-600">Could not load gallery.</p>';
      }
    })();

    // Render docs
    (async () => {
      try {
        const docs = await fetchJSON('./docs.json');
        const list = document.getElementById('docList');
        const frame = document.getElementById('docFrame');
        const dl = document.getElementById('docDownload');

        function setDoc(src){ frame.src = src; dl.href = src; }

        list.innerHTML = '';
        docs.forEach((d,i) => {
          const li = document.createElement('li');
          li.innerHTML = `<button class="w-full text-left px-3 py-2 rounded border hover:bg-gray-50">${d.name}</button>`;
          li.querySelector('button').addEventListener('click', () => setDoc(d.src));
          list.appendChild(li);
          if(i===0) setDoc(d.src);
        });
      } catch(e) {
        console.error(e);
        document.getElementById('docList').innerHTML =
          '<li class="text-sm text-red-600">Could not load documents.</li>';
      }
    })();

    // ====== FINANCIAL CONFIG ‚Äî EDIT THESE VALUES ======
    const finance = {
      // balances = current estimated payoff balances
      mortgage1: { balance: 0, rate: 4.0, monthly: 0, escrowed: false },
      mortgage2: { balance: 0, rate: 7.5, monthly: 0, escrowed: false },
      insuranceMonthly: 0,
      taxesAnnual: 2952,
      hoaMonthly: 22,
      estFees: 0,
      payoffGoodThrough: '',     // e.g., "Good through Aug 12, 2025"
      assumable: 'no',           // 'yes' or 'no'
      prepaymentPenalty: 'none', // 'none' or details
      utilitiesAvg: { electric: 0, water: 0 } // optional monthly averages
    };
    // ====== END CONFIG ======

    const fmt = n => n.toLocaleString(undefined, { style:'currency', currency:'USD', maximumFractionDigits:0 });
    const setText = (id, val) => { const el = document.getElementById(id); if (el) el.textContent = val; };

    function renderFinance() {
      // Mortgage rows
      const rows = [
        { label:'Mortgage 1', bal: finance.mortgage1.balance, rate: finance.mortgage1.rate, mon: finance.mortgage1.monthly },
        { label:'Mortgage 2', bal: finance.mortgage2.balance, rate: finance.mortgage2.rate, mon: finance.mortgage2.monthly }
      ];
      const tbody = document.getElementById('loanRows');
      if (tbody) {
        tbody.innerHTML = rows.map(r => `
          <tr>
            <td class="p-2">${r.label}</td>
            <td class="p-2">${fmt(r.bal || 0)}</td>
            <td class="p-2">${(r.rate ?? 0).toFixed(2)}%</td>
            <td class="p-2">${fmt(r.mon || 0)}</td>
          </tr>
        `).join('');
      }

      const taxMonthly = (finance.taxesAnnual || 0) / 12;
      const carry = (finance.mortgage1.monthly || 0)
                  + (finance.mortgage2.monthly || 0)
                  + (finance.insuranceMonthly || 0)
                  + taxMonthly
                  + (finance.hoaMonthly || 0);

      setText('m1Monthly', fmt(finance.mortgage1.monthly || 0));
      setText('m2Monthly', fmt(finance.mortgage2.monthly || 0));
      setText('insMonthly', fmt(finance.insuranceMonthly || 0));
      setText('taxMonthly', fmt(taxMonthly));
      setText('hoaMonthly', fmt(finance.hoaMonthly || 0));
      setText('carryTotal', fmt(carry));

      const payoff = (finance.mortgage1.balance || 0) + (finance.mortgage2.balance || 0) + (finance.estFees || 0);
      setText('m1Bal', fmt(finance.mortgage1.balance || 0));
      setText('m2Bal', fmt(finance.mortgage2.balance || 0));
      setText('fees', fmt(finance.estFees || 0));
      setText('payoffTotal', fmt(payoff));

      // Notes
      if (finance.payoffGoodThrough) document.getElementById('goodThroughNote').textContent = `Payoff figures: ${finance.payoffGoodThrough}.`;
      document.getElementById('assumableNote').textContent = `Assumability: Mortgage 1 at ${finance.mortgage1.rate.toFixed(2)}% is ${finance.assumable === 'yes' ? 'assumable' : 'not assumable'}.`;
      document.getElementById('prepayNote').textContent = `Prepayment penalties: ${finance.prepaymentPenalty}.`;
      document.getElementById('escrowNote').textContent = `Escrow: Taxes ${finance.mortgage1.escrowed || finance.mortgage2.escrowed ? 'and/or insurance are' : 'and insurance are not'} escrowed in a mortgage payment.`;
      const u = finance.utilitiesAvg || {};
      document.getElementById('utilityAvgNote').textContent = `Utility averages (optional): Electric ${u.electric ? fmt(u.electric) : '‚Äî'}, Water ${u.water ? fmt(u.water) : '‚Äî'} per month.`;
    }

    renderFinance();
  </script>

